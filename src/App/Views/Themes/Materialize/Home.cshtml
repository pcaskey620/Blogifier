@model ListModel
@{  
    bool topSectionWhite = false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="~/Views/Themes/Materialize/_Shared/_Head.cshtml" />
</head>
<body class="blue-grey">

    <partial name="~/Views/Themes/Materialize/_Shared/_Header.cshtml" />

    <main>

        <style>
            .card .card-content {
                padding-top: 6px;
                padding-bottom: 6px;
                padding-left: 10px;
                padding-right: 10px;
            }
        </style>

        <div class="parallax-container">
            <div class="parallax">
                <img class="responsive-img" src="https://aajoaihlwo.cloudimg.io/cdno/n/n/https://www.parksandwils.com/data/admin/2020/5/van-hero.jpg" />
            </div>
            <h2 class="hide-on-small-only grey-text text-darken-3 center-align font-raleway delay-1s animated fadeInUp" style="margin-top: 12%; letter-spacing: 10px;">CHASE ADVENTURE</h2>
            <h5 class="hide-on-med-and-up grey-text text-darken-3 center-align font-raleway delay-1s animated fadeInUp" style="margin-top: 12%; letter-spacing: 5px;">CHASE ADVENTURE</h5>
        </div>

        <div class=" white">
            <div class="row">
                <div class="animated fadeIn delay-1s col s12 m8 l6 offset-m2 offset-l3 center-align">
                    <h4 class="font-amatic">Hey there!</h4>
                    <p class="grey-text text-darken-3 lighten-3 font-shadows-into-light flow-text" style="text-align: justify;">
                        We are Jessica & Parker, vanlife adventure enthusiasts sharing our travels and experiences. 
                        We hope our adventures inspire you to spend your days living a life that makes you happy. Cheers!
                    </p>
                </div>
            </div>            
        </div>

        <div class="section">
            <div class="row container center-align">
                <h3 class="animated fadeIn delay-1s font-amatic white-text">Explore</h3>
                <div class="wp2 col s6 m6 l4 pt-2">
                    <div class="hoverable">
                        <a href="~/categories/alaska" title="Alaska">
                            <img id="alaska" class="responsive-img" src="https://aajoaihlwo.cloudimg.io/v7/https://www.parksandwils.com/data/admin/2020/5/alaska%20cover.png?h=500&w=500" />
                        </a>
                    </div>
                </div>
                <div class="wp3 col s6 m6 l4 pt-2">
                    <div class="hoverable">
                        <a href="~/categories/canada" title="Canada">
                            <img id="canada" class="responsive-img" src="https://aajoaihlwo.cloudimg.io/v7/https://www.parksandwils.com/data/admin/2020/5/canada%20cover.png?h=500&w=500" />
                        </a>
                    </div>
                </div>
                <div class="wp4 col s6 m6 l4 pt-2">
                    <div class="hoverable">
                        <a href="~/categories/national%20parks" title="National Parks">
                            <img id="national-parks" class="responsive-img" src="https://aajoaihlwo.cloudimg.io/v7/https://www.parksandwils.com/data/admin/2020/5/national%20parks%20cover.png?h=500&w=500" />
                        </a>
                    </div>
                </div>
                <div class="wp5 col s6 m6 l4 pt-2">
                    <div class="hoverable">
                        <a href="~/categories/pnw" title="Pacific North West">
                            <img id="pnw" class="responsive-img" loading="lazy" src="https://aajoaihlwo.cloudimg.io/v7/https://www.parksandwils.com/data/admin/2020/5/pnw%20cover.png?h=500&w=500" />
                        </a>
                    </div>
                </div>
                <div class="wp6 col s6 m6 l4 pt-2">
                    <div class="hoverable">
                        <a href="~/categories/vanlife" title="Vanlife">
                            <img id="vanlife" class="responsive-img" loading="lazy" src="https://aajoaihlwo.cloudimg.io/v7/https://www.parksandwils.com/data/admin/2020/5/vanlife%20cover.png?h=500&w=500" />
                        </a>
                    </div>
                </div>
                <div class="wp7 col s6 m6 l4 pt-2">
                    <div class="hoverable">
                        <a href="~/categories/winter%20vanlife" title="Winter Vanlife">
                            <img id="winter-vanlife" class="responsive-img" loading="lazy" src="https://aajoaihlwo.cloudimg.io/v7/https://www.parksandwils.com/data/admin/2020/5/winter%20vanlife%20cover.png?h=500&w=500" />
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="section white">
            <div class="wp8 row container center-align">                
                <a href="~/AboutUs" style="color: black;">
                    <div class="wp9 col s6 m6 l6">
                        <img class="circle responsive-img" loading="lazy" src="https://aajoaihlwo.cloudimg.io/cdno/n/n/https://www.parksandwils.com/themes/materialize/images/Jess.jpg" />
                        @*<p class="flow-text font-major-mono">JWiLs</p>*@
                    </div>
                    <div class="wp10 col s6 m6 l6">
                        <img class="circle responsive-img" loading="lazy" src="https://aajoaihlwo.cloudimg.io/cdn/n/n/https://www.parksandwils.com/themes/materialize/images/Parker.jpg" />
                        @*<p class="flow-text font-major-mono">PaRKs</p>*@
                    </div>
                    <h5 class="wp11 grey-text text-darken-3 lighten-3 font-amatic pt-1">Click to learn about Jessica and Parker</h5>
                </a>
            </div>
        </div>

        <div class="section">
            <div class="row container center-align">
                <h3 class="font-amatic white-text">Featured Posts</h3>
                @foreach (PostItem post in Model.Posts)
                {
                    <div class="wp12 col s12 m6 l4">
                        <a href="~/posts/@post.Slug" title="@post.Title" style="color: black;">
                            <div class="card hoverable">
                                <div class="card-image">
                                    <img class="responsive-img" alt="@post.Title" loading="lazy" src="https://aajoaihlwo.cloudimg.io/cdn/n/n/https://www.parksandwils.com/@post.Cover" />
                                </div>
                                <div class="card-content font-raleway">
                                    @post.Description
                                </div>
                            </div>
                        </a>
                    </div>
                }
                <div class="col s12 m12 l12">
                    <a class="waves-effect waves-light btn font-raleway" title="All Post" href="~/Blog">View All Posts</a>
                </div>
            </div>
        </div>

        <div class="section white">
            <div class="row container center-align">
                <h3 class="font-amatic">Galleries</h3>
                <div class="carousel" style="margin-top: -100px; margin-bottom: -100px;">
                    @foreach (Gallery gallery in Model.Galleries)
                    {
                        var imgPath = "https://aajoaihlwo.cloudimg.io/v7/https://www.parksandwils.com/" + gallery.CoverImagePath + "?h=360&w=640&gravity=auto";
                        <a class="carousel-item" href="~/collections/@gallery.Slug" title="@gallery.Title">
                            <div class="card hoverable">
                                <div class="card-image">
                                    <img class="responsive-img" src="@imgPath" loading="lazy" />
                                </div>
                                <div class="card-content blue-grey font-raleway" style="padding-top: 6px; padding-bottom: 6px; color: white;">
                                    @gallery.Title
                                </div>
                            </div>
                        </a>
                    }
                </div>
                <div class="col s12 m12 l12">
                    <a class="waves-effect waves-light btn font-raleway" title="All Galleries" href="~/Collections">View All Galleries</a>
                </div>
            </div>
        </div>

        <div class="section">
            <div class="wp13 row container center-align">
                <h3 class="font-amatic white-text">Featured Video</h3>
                <div class="youtube-responsive" style="margin-top: 1em;">
                    <iframe loading="lazy" width="560" height="315" src="https://www.youtube.com/embed/x83f_Rl_hzI" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
            <div class="row container center-align">
                <a class="waves-effect waves-light btn font-raleway" title="All Videos" href="~/Videos">View All Videos</a>
            </div>
        </div>

        <div class="section white">
            <div class="wp14 row container center-align">
                <h3 class="font-amatic"><i class="fas fa-map-marked-alt"></i> Current Location</h3>
                <div class="col s12 m12 l8 offset-l2">
                    <div id="map" style="margin-left: auto; margin-right: auto; display: block;"></div>
                </div>
            </div>
            <div class="wp15 row container center-align">
                <h4 class="font-amatic">Resorts Visited in 19/20 Season</h4>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <span>Copper</span>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> Winter Park
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> Breckenridge
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> Keystone
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/steamboat-springs">Steamboat</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/utah-skiing">Solitude</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/utah-skiing">Snowbird</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/utah-skiing">Park City</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/utah-skiing">Snowbasin</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/big-sky">Big Sky</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/jackson-hole-teton-valley">Jackson Hole</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/jackson-hole-teton-valley">Targhee</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/washington-skiing">Stevens Pass</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/washington-skiing">Crystal</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/washington-skiing">Snoqualmie</a>
                </div>
                <div class="col s6 m6 l4 font-raleway">
                    <i class="material-icons">check</i> <a href="~/posts/whistler">Whistler</a>
                </div>
                <div class="col s6 m6 l4 font-raleway center-align">
                    <i class="material-icons">check</i> <a href="~/posts/revelstoke">Revelstoke</a>
                </div>
                <div class="col s6 m6 l4 font-raleway center-align">
                    <i class="material-icons">check</i> <a href="~/posts/revelstoke">Sunshine</a>
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <partial name="~/Views/Themes/Materialize/_Shared/_ToTopSection.cshtml" model="topSectionWhite" />
            </div>
        </div>

