@model GalleryViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="~/Views/Themes/Materialize/_Shared/_Head.cshtml" />
    <link type="text/css" rel="stylesheet" href="~/themes/materialize/plugins/lightgallary/css/lightgallery.css" />
</head>
<body class="blue-grey">

    <partial name="~/Views/Themes/Materialize/_Shared/_Header.cshtml" />
    
    <main>
        <div class="container">
            <div class="row">
                <div class="col s12 m12 l12 center-align">
                    <h4 class="font-amatic white-text">@Model.Gallery.Title</h4>
                </div>
            </div>
        </div>
        <div class="container" style="width: 90%" id="gallery-container">
            <div id="lightgallery" class="row">
                @foreach (GalleryImage image in Model.Gallery.GalleryImages)
                {                  
                    <a href="@image.Path"><img class="" src="@image.Path" data-src="@image.Path" data-ng-src="@image.Path" /></a>
                }
            </div>
        </div>
    </main>

    <partial name="~/Views/Themes/Materialize/_Shared/_Footer.cshtml" />

    <script src="~/themes/materialize/plugins/lightgallary/js/lightgallery.js"></script>
    <script src="~/themes/materialize/plugins/lightgallary/js/lg-fullscreen.js"></script>
    <script src="~/themes/materialize//plugins/lightgallary/js/lg-thumbnail.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#lightgallery").lightGallery({thumbnail:true});
        });
    </script>
</body>
</html>