@{
    var returnUrl = Url.Action("Index", "Admin");
}

<footer class="page-footer cyan darken-1">
    <div class="container">
        <div class="row">
            <div class="col s12 m6 l6">
                <h5 class="white-text font-amatic">Get to Know Us</h5>
                <p class="grey-text text-lighten-4 font-jose">
                    Jessica and Parker are an adventure loving couple traveling North America in a Promaster Campervan.  Follow us to track our journey! 
                </p>
            </div>
            <div class="col s12 m6 l6 center-align">
                <a class="white-text" href="https://www.instagram.com/parks.and.wils/" target="_blank">
                    <h4 class="font-raleway"><i class="fas fa-share-alt"> </i>  Follow Us  <i class="fab fa-instagram" aria-hidden="true"></i></h4>
                </a>
                @*<a href="https://www.instagram.com/parks.and.wils/" target="_blank">
                    <i class="fab fa-instagram foot-icon" aria-hidden="true"></i>
                </a>*@
                @*<i class="fab fa-facebook-square foot-icon" aria-hidden="true"></i>
                <i class="fab fa-youtube foot-icon" aria-hidden="true"></i>
                <i class="fab fa-spotify foot-icon" aria-hidden="true"></i>*@
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            <div class="row container center-align">
                <div class="col l12 s12">
                    Copyright &copy; Parks & Wils @DateTime.Now.Year
                </div>
            </div>
            <div class="row container center-align">
                <div class="col l12 s12">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="~/admin"><img class="footer-logo responsive-img" src="~/themes/materialize/images/parksAndWilsLogoSmall.png" alt="admin login" /></a>
                    }
                    else
                    {
                        <a href="~/account/login?ReturnUrl=@returnUrl"><img class="footer-logo  responsive-img" src="~/themes/materialize/images/parksAndWilsLogoSmall.png" alt="admin login" /></a>
                    }
                </div>
            </div>
        </div>
    </div>
</footer>

<script src="~/themes/materialize/plugins/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="~/themes/materialize/plugins/materialize/materialize.min.js"></script>
<script src="~/themes/materialize/js/main.js"></script>
